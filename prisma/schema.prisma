generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}

model User {
  id         Int        @id @default(autoincrement())
  uuid       String     @unique @default(uuid())
  name       String
  email      String     @unique
  password   String
  role       Role
  status     UserStatus @default(ACTIVE)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  prospects  Prospect[]
}

enum Role {
  ADMIN
  ADVISOR
}

enum CompanyStatus {
  ACTIVE
  INACTIVE
  PENDING_REVIEW
  BLACKLISTED
}

model InsuranceCompany {
  id          Int             @id @default(autoincrement())
  uuid        String          @unique @default(uuid())
  name        String
  logo        String?
  description String?
  status      CompanyStatus   @default(ACTIVE)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  plans       InsurancePlan[]
}

enum PlanStatus {
  ACTIVE
  INACTIVE
  DRAFT
  DISCONTINUED
}

model InsurancePlan {
  id                  Int              @id @default(autoincrement())
  uuid                String           @unique @default(uuid())
  name                String
  company             InsuranceCompany @relation(fields: [companyId], references: [id])
  companyId           Int
  description         String?
  sumInsured          Float?
  deductible          Float?
  coInsurance         Float?
  coInsuranceCap      Float?
  benefits            Json
  customizableOptions Json
  status              PlanStatus       @default(ACTIVE)
  createdAt           DateTime         @default(now())
  updatedAt           DateTime         @updatedAt
  quotes              Quote[]
}

enum ProspectStatus {
  NEW
  CONTACTED
  QUALIFIED
  QUOTED
  CONVERTED
  LOST
  INACTIVE
}

model Prospect {
  id              Int              @id @default(autoincrement())
  uuid            String           @unique @default(uuid())
  name            String
  email           String
  dateOfBirth     DateTime?
  postalCode      String?
  assignedAdvisor User?            @relation(fields: [advisorId], references: [id])
  advisorId       Int?
  status          ProspectStatus   @default(NEW)
  additionalInfo  Json?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  quotes          Quote[]
  trackingNumbers TrackingNumber[]
}

enum QuoteStatus {
  DRAFT
  SENT
  ACCEPTED
  REJECTED
  EXPIRED
  REVISED
}

model Quote {
  id             Int             @id @default(autoincrement())
  uuid           String          @unique @default(uuid())
  prospect       Prospect        @relation(fields: [prospectId], references: [id])
  prospectId     Int
  plan           InsurancePlan   @relation(fields: [planId], references: [id])
  planId         Int
  customizations Json?
  totalPrice     Float?
  status         QuoteStatus     @default(DRAFT)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  trackingNumber TrackingNumber?
}

enum TrackingNumberStatus {
  ACTIVE
  CLOSED
  EXPIRED
  CANCELLED
}

model TrackingNumber {
  id         Int                  @id @default(autoincrement())
  uuid       String               @unique @default(uuid())
  number     String               @unique
  prospect   Prospect             @relation(fields: [prospectId], references: [id])
  prospectId Int
  quote      Quote?               @relation(fields: [quoteId], references: [id])
  quoteId    Int?                 @unique
  status     TrackingNumberStatus @default(ACTIVE)
  createdAt  DateTime             @default(now())
  updatedAt  DateTime             @updatedAt
}