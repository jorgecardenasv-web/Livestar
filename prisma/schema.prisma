generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public", "auth"]
}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED

  @@schema("auth")
}

model Session {
  id        String   @id @default(uuid())
  userId    Int
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@schema("auth")
}

model User {
  id                   Int        @id @default(autoincrement())
  uuid                 String     @unique @default(uuid())
  name                 String
  email                String     @unique
  password             String
  role                 Role
  status               UserStatus @default(ACTIVE)
  isNewAdvisor         Boolean    @default(true)
  lastProspectAssigned DateTime?
  createdAt            DateTime   @default(now())
  updatedAt            DateTime   @updatedAt
  prospects            Prospect[]
  sessions             Session[]

  @@schema("auth")
}

enum Role {
  ADMIN
  ADVISOR

  @@schema("auth")
}

enum CompanyStatus {
  ACTIVE
  INACTIVE
  PENDING_REVIEW
  BLACKLISTED

  @@schema("public")
}

model InsuranceCompany {
  id          Int             @id @default(autoincrement())
  uuid        String          @unique @default(uuid())
  name        String
  logo        String
  description String?
  status      CompanyStatus   @default(ACTIVE)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  plans       InsurancePlan[]

  @@schema("public")
}

enum PlanStatus {
  ACTIVE
  INACTIVE
  DRAFT
  DISCONTINUED

  @@schema("public")
}

enum HospitalTier {
  BASIC
  INTERMEDIATE
  EXECUTIVE
  PLUS

  @@schema("public")
}

enum MedicalFeeSchedule {
  BASIC
  INTERMEDIATE
  HIGH
  EXECUTIVE

  @@schema("public")
}

model InsurancePlan {
  id                  Int                @id @default(autoincrement())
  uuid                String             @unique @default(uuid())
  totalPrice          Float
  name                String
  company             InsuranceCompany   @relation(fields: [companyId], references: [id])
  companyId           Int
  description         String?
  sumInsured          Float
  deductible          Float
  coInsurance         Float
  coInsuranceCap      Float?
  hospitalTier        HospitalTier
  medicalFeeSchedule  MedicalFeeSchedule
  additionalClauses   Json
  benefits            Json
  customizableOptions Json
  status              PlanStatus         @default(ACTIVE)
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt
  quotes              Quote[]
  isRecommended       Boolean            @default(false)

  @@schema("public")
}

enum PlanType {
  ESENCIAL
  PROTEGIDO
  BLINDADO

  @@schema("public")
}

enum ProspectStatus {
  NEW
  CONTACTED
  QUALIFIED
  QUOTED
  CONVERTED
  LOST
  INACTIVE

  @@schema("public")
}

model Prospect {
  id              Int            @id @default(autoincrement())
  uuid            String         @unique @default(uuid())
  name            String
  gender          String
  age             Int?
  postalCode      String
  protectWho      String
  whatsapp        String
  email           String
  isVerified      Boolean        @default(false)
  status          ProspectStatus @default(NEW)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  additionalInfo  Json?
  user            User?          @relation(fields: [userId], references: [id])
  userId          Int?
  quotes          Quote[]
  lastContactDate DateTime?
  medicalHistories MedicalHistory[]
  @@schema("public")
}
model MedicalHistory {
  id          Int       @id @default(autoincrement())
  uuid        String    @unique @default(uuid())
  responses   Json      
  prospect    Prospect   @relation(fields: [prospectId], references: [id])
  prospectId  Int        
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@schema("public")
}


enum QuoteStatus {
  DRAFT
  SENT
  UNDER_REVIEW
  ACCEPTED
  REJECTED
  EXPIRED
  REVISED

  @@schema("public")
}

model Quote {
  id             Int             @id @default(autoincrement())
  uuid           String          @unique @default(uuid())
  prospect       Prospect        @relation(fields: [prospectId], references: [id])
  prospectId     Int
  plan           InsurancePlan   @relation(fields: [planId], references: [id])
  planId         Int
  customizations Json?
  totalPrice     Float
  status         QuoteStatus     @default(DRAFT)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  trackingNumber TrackingNumber?
  expirationDate DateTime?

  @@schema("public")
}

model TrackingNumber {
  id           Int      @id @default(autoincrement())
  uuid         String   @unique @default(uuid())
  number       String   @unique
  quote        Quote    @relation(fields: [quoteId], references: [id])
  quoteId      Int      @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  lastActivity DateTime @default(now())
  activityLog  Json?

  @@schema("public")
}
