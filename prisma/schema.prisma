generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public", "auth"]
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@schema("auth")
}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED

  @@schema("auth")
}

enum Role {
  ADMIN
  ADVISOR

  @@schema("auth")
}

model User {
  id                   String     @id @default(uuid())
  name                 String
  email                String     @unique
  password             String
  role                 Role
  status               UserStatus @default(ACTIVE)
  isNewAdvisor         Boolean    @default(true)
  lastProspectAssigned DateTime?
  createdAt            DateTime   @default(now())
  updatedAt            DateTime   @updatedAt
  prospects            Prospect[]
  sessions             Session[]

  @@schema("auth")
}

enum InsuranceStatus {
  ACTIVE
  INACTIVE
  PENDING_REVIEW
  BLACKLISTED

  @@schema("public")
}

model Insurance {
  id          String          @id @default(uuid())
  name        String          @unique
  logo        String
  description String?
  status      InsuranceStatus @default(ACTIVE)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  plans       Plan[]

  @@schema("public")
}

enum PlanTypeStatus {
  ACTIVE
  INACTIVE

  @@schema("public")
}

model PlanType {
  id        String         @id @default(uuid())
  name      String
  status    PlanTypeStatus @default(ACTIVE)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  Plan      Plan[]

  @@schema("public")
}

enum PlanStatus {
  ACTIVE
  INACTIVE
  DRAFT
  DISCONTINUED

  @@schema("public")
}

model Plan {
  id             String       @id @default(uuid())
  planType       PlanType     @relation(fields: [planTypeId], references: [id], onDelete: Cascade)
  planTypeId     String
  company        Insurance    @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId      String
  sumInsured     Float
  coInsurance    Float
  coInsuranceCap Float?
  status         PlanStatus   @default(ACTIVE)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  quotes         Quote[]
  isRecommended  Boolean      @default(false)
  prices         Json
  deductibles    Deductible[]

  @@unique([planTypeId, companyId])
  @@schema("public")
}

model Deductible {
  id            String @id @default(uuid())
  plan          Plan   @relation(fields: [planId], references: [id])
  planId        String
  hospitalLevel String
  amount        Float
  option        Json[]

  @@schema("public")
}

enum ProspectStatus {
  NEW
  CONTACTED
  QUALIFIED
  QUOTED
  CONVERTED
  LOST
  INACTIVE

  @@schema("public")
}

model Prospect {
  id               String           @id @default(uuid())
  name             String
  gender           String
  age              Int?
  postalCode       String
  protectWho       String
  whatsapp         String
  email            String
  isVerified       Boolean          @default(false)
  status           ProspectStatus   @default(NEW)
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  additionalInfo   Json?
  user             User?            @relation(fields: [userId], references: [id])
  userId           String?
  quotes           Quote[]
  lastContactDate  DateTime?
  medicalHistories MedicalHistory[]

  @@schema("public")
}

model MedicalHistory {
  id         String   @id @default(uuid())
  responses  Json
  prospect   Prospect @relation(fields: [prospectId], references: [id])
  prospectId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@schema("public")
}

enum QuoteStatus {
  DRAFT
  SENT
  UNDER_REVIEW
  ACCEPTED
  REJECTED
  EXPIRED
  REVISED

  @@schema("public")
}

model Quote {
  id             String          @id @default(uuid())
  prospect       Prospect        @relation(fields: [prospectId], references: [id])
  prospectId     String
  plan           Plan            @relation(fields: [planId], references: [id])
  planId         String
  customizations Json?
  totalPrice     Float
  status         QuoteStatus     @default(DRAFT)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  trackingNumber TrackingNumber?
  expirationDate DateTime?

  @@schema("public")
}

model TrackingNumber {
  id           String   @id @default(uuid())
  number       String   @unique
  quote        Quote    @relation(fields: [quoteId], references: [id])
  quoteId      String   @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  lastActivity DateTime @default(now())
  activityLog  Json?

  @@schema("public")
}
