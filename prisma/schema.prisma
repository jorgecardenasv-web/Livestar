generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  uuid      String     @unique @default(uuid())
  name      String
  email     String     @unique
  password  String
  role      Role
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  prospects Prospect[]
}

enum Role {
  ADMIN
  ADVISOR
}

model InsuranceCompany {
  id          Int             @id @default(autoincrement())
  uuid        String          @unique @default(uuid())
  name        String
  logo        String?
  description String?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  plans       InsurancePlan[]
}

model InsurancePlan {
  id                  Int              @id @default(autoincrement())
  uuid                String           @unique @default(uuid())
  name                String
  company             InsuranceCompany @relation(fields: [companyId], references: [id])
  companyId           Int
  description         String?
  sumInsured          Float?
  deductible          Float?
  coInsurance         Float?
  coInsuranceCap      Float?
  benefits            Json
  customizableOptions Json
  createdAt           DateTime         @default(now())
  updatedAt           DateTime         @updatedAt
  quotes              Quote[]
}

model Prospect {
  id              Int              @id @default(autoincrement())
  uuid            String           @unique @default(uuid())
  name            String
  email           String
  dateOfBirth     DateTime?
  postalCode      String?
  assignedAdvisor User?            @relation(fields: [advisorId], references: [id])
  advisorId       Int?
  status          ProspectStatus
  additionalInfo  Json?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  quotes          Quote[]
  trackingNumbers TrackingNumber[]
}

enum ProspectStatus {
  NEW
  CONTACTED
  QUOTED
  CLOSED
}

model Quote {
  id             Int             @id @default(autoincrement())
  uuid           String          @unique @default(uuid())
  prospect       Prospect        @relation(fields: [prospectId], references: [id])
  prospectId     Int
  plan           InsurancePlan   @relation(fields: [planId], references: [id])
  planId         Int
  customizations Json?
  totalPrice     Float?
  status         QuoteStatus
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  trackingNumber TrackingNumber?
}

enum QuoteStatus {
  DRAFT
  SENT
  ACCEPTED
  REJECTED
}

model TrackingNumber {
  id         Int                  @id @default(autoincrement())
  uuid       String               @unique @default(uuid())
  number     String               @unique
  prospect   Prospect             @relation(fields: [prospectId], references: [id])
  prospectId Int
  quote      Quote?               @relation(fields: [quoteId], references: [id])
  quoteId    Int?                 @unique
  status     TrackingNumberStatus
  createdAt  DateTime             @default(now())
  updatedAt  DateTime             @updatedAt
}

enum TrackingNumberStatus {
  ACTIVE
  CLOSED
}